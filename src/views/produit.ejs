<!DOCTYPE HTML>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Le grenier de mamie</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
</head>
    <body>
    <div class="container-fluid px-0">
        <nav class="navbar-expand navcolor">
            <div class="container-fluid px-0">
                <div class="row w-100">
                    <div class="col-3 d-flex align-items-center">
                        <a class="navbar-brand" href="/">
                            <img src="/ressources/logo.png" alt="Le grenier de mamie" id="logo_brand">
                        </a>
                    </div>
                    <div class="col-6 d-flex align-items-center justify-content-center">
                        <form class="form-inline d-flex w-100" method="get" action="http://localhost:8080/search">
                            <div class="input-group w-100 w-sm-75 w-md-60 w-lg-80">
                                <input class="form-control" id="searchbar" name="recherche" type="search"
                                       placeholder="Rechercher"/>
                                <button id="search-button" type="button" class="btn bg-light">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col-3 d-flex align-items-center justify-content-end">
                        <a href="/profil">
                            <i class="fa-solid fa-user fa-xl logos m-2"></i>
                        </a>
                        <a href="/panier">
                            <i class="fa-solid fa-cart-shopping fa-xl logos m-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container-fluid px-0">
            <nav class="navbar navbar-expand-lg navbar-light navcolor" id="categ">
                <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navArticles"
                        aria-controls="navArticles" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navArticles">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link categorie" href="/pantalons">pantalons</a>
                        <a class="nav-item nav-link categorie" href="/shorts">shorts</a>
                        <a class="nav-item nav-link categorie" href="/chemises">chemises</a>
                        <a class="nav-item nav-link categorie" href="/vestes">vestes</a>
                        <a class="nav-item nav-link categorie" href="/pulls">pulls</a>
                        <a class="nav-item nav-link categorie" href="/costumes">costumes</a>
                        <a class="nav-item nav-link categorie" href="/manteaux">manteaux</a>
                        <a class="nav-item nav-link categorie" href="/robes">robes</a>
                        <a class="nav-item nav-link categorie" href="/chaussettes">chaussettes</a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="container-fluid px-0 main-frame">
        <div class="container">
            <div class="card mb-6">
                <div class="card-body text-left">
                    <img src="/ressources/placeholder.png" class="card-img-top" alt="product's image">
                    <h5 class="card-title"><%= elements[0].nom_produit %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= elements[0].prix %> â‚¬</h6>
                    <p class="card-text"><%= elements[0].marque %></p>
                    <form method="post" action="http://localhost:8080/ajoutePanier" id="add-to-panier-form">
                        <input type="hidden" name="id_produit" value="<%= elements[0].id_produit %>">
                            <% let etat = { enRupture: true };
                                for(let i = 0; i < tailles.length ; i++){
                                    if(tailles[i].quantite>0){
                                        if(etat.enRupture){%>
                                            <select name="taille">
                                        <%}
                                        etat.enRupture=false;%>
                                        <option value="<%=tailles[i].taille%>"><%=tailles[i].taille%></option>
                                <%  }
                                }
                                if(!etat.enRupture){%>
                        </select>

                        
                        <select name="accessoire">
                            <option value="-1">Pas d'accessoire</option>
                            <% for(let i = 0; i < accessoires.length ; i++){ 
                                if(elements[0].type_produit===accessoires[i].type_produit){%>
                                    <option value="<%= accessoires[i].id_accessoire %>"><%=accessoires[i].nom_accessoire %></option>
                            <%  }
                            } %>
                        </select>
                        <button type="submit" id="add-to-panier-btn" class="btn btn-primary">Ajouter au panier</button>
                            <%}else{%>
                            <button type="submit" id="add-to-panier-btn" class="btn btn-primary disabled">En rupture de stock</button>
                        <% }%>                        
                    </form>
                </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="https://kit.fontawesome.com/607cb4a3b6.js" crossorigin="anonymous"></script>
        <script src="/js/panier.js"></script>
    </div>
    </body>
</html>