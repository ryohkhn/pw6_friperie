<!DOCTYPE HTML^>
<html>
<head>
    <meta charset="UTF-8">
    <title>Le grenier de mamie</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
</head>
<body>
<header>
    <h1 id="logo">Le grenier de mamie</h1>
</header>
    <form method="post" action="http://localhost:8080/verify_register">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputPrenom">Prénom</label>
                <input type="text" class="form-control" id="inputPrenom" name="inputPrenom" placeholder="Prénom" required="required">
            </div>
            <div class="form-group col-md-6">
                <label for="inputNom">Nom</label>
                <input type="text" class="form-control" id="inputNom" name="inputNom" placeholder="Nom" required="required">
            </div>
        </div>
        <% if (erreurs.prenom) { %>
            <div class="alert alert-danger">
              <%= erreurs.prenom %>
            </div>
        <% } %>
        <% if (erreurs.nom) { %>
            <div class="alert alert-danger">
              <%= erreurs.nom %>
            </div>
        <% } %>
        <div class="form-group">
            <label for="inputLogin">Pseudo</label>
            <input type="text" class="form-control" id="inputLogin" name="inputLogin" placeholder="Pseudo" required="required">
        </div>
        <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="email" class="form-control" id="inputEmail" name="inputEmail" placeholder="Email" required="required">
        </div>
        <% if (erreurs.email) { %>
            <div class="alert alert-danger">
              <%= erreurs.email %>
            </div>
        <% } %>
        <% if (erreurs.emailExists) { %>
            <div class="alert alert-danger">
              <%= erreurs.emailExists %>
            </div>
        <% } %>
        <div class="form-group">
            <label for="inputAdresse">Adresse</label>
            <input type="text" class="form-control" id="inputAdresse" name="inputAdresse" placeholder="2 rue victor hugo" required="required">
        </div>
        <% if (erreurs.adresse) { %>
            <div class="alert alert-danger">
              <%= erreurs.adresse %>
            </div>
        <% } %>
        <div class="form-group">
        <label for="inputAdresse2">Adresse 2</label>
        <input type="text" class="form-control" id="inputAdresse2" name="inputAdresse2" placeholder="Informations complémentaires">
        </div>
        <% if (erreurs.adresse2) { %>
            <div class="alert alert-danger">
              <%= erreurs.adresse2 %>
            </div>
        <% } %>
        <div class="form-row">
        <div class="form-group col-md-8">
            <label for="inputVille">Ville</label>
            <input type="text" class="form-control" id="inputVille" name="inputVille" required="required">
        </div>
        <div class="form-group col-md-4">
            <label for="inputCode">Code Postal</label>
            <input type="text" class="form-control" id="inputCode" name="inputCode" required="required">
        </div>
        </div>
        <% if (erreurs.ville) { %>
            <div class="alert alert-danger">
              <%= erreurs.ville %>
            </div>
        <% } %>
        <% if (erreurs.code) { %>
            <div class="alert alert-danger">
              <%= erreurs.code %>
            </div>
        <% } %>
        <button type="submit" class="btn btn-primary">Valider</button>
    </form>
</body>
</html>